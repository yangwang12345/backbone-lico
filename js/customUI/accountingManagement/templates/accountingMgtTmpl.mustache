<div class="container-fluid userViewArea_userManagemwnt" >
	<div class="admin-users-title">		
		<div class="new_accounting_icon"></div><h3 class="overall-heading">{{nls.accountingTitle}}</h3>		
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="btn-toolbar">
				<div class="btn-group">
					<button class="btn btn-primary" id="addNewBillGroupBtn">{{nls.createAccountingGroup}}</button>
				</div>
				<div class="btn-group">
					<button class="btn btn-primary" id="changeRateBtn" disabled>{{nls.changeRate}}</button>
				</div>
				<div class="btn-group">
					<button class="btn btn-primary" id="depositBtn" disabled>{{nls.depositCredits}}</button>
				</div>
				<div class="btn-group">
					<button class="btn btn-primary" id="deductBtn" disabled>{{nls.deductCredits}}</button>
				</div>
				<div class="btn-group">
					<button class="btn btn-primary" id="deleteBtn" disabled>{{nls.deleteBillGroup}}</button>
				</div>
			</div>
			<div class="dataTable_wrapper" >
				<table class="table table-striped table-hover" id="accountingGrid"></table>
			</div>
		</div>
	</div>
	<div id="createAccountingGroup"></div>
	<div id="changeChargeRate"></div>
	<div id="depositBalance"></div>
	<div id="deductBalance"></div>
	<div id="progressArea"></div>
	<div id="messageArea"></div>

	<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="true">
		<div class="modal-dialog modal-overall">
			<div class="modal-content modal-content-overall">
				<div class="modal-header modal-header-overall">
					<h4 class="modal-title new_user_mudle_partment">{{nls.confirmDeletion}}<span id="selectedBillGroupName"></span>?</h4>
				</div>
				<div class="modal-body" id="deleteBillGroupBody" >
					<div id="deleteErrorMsg" ></div>
				</div>
				<div class="modal-footer modal-footer-overall">
					<div class="row">
						<div class="col-sm-6">
							<button class="btn btn-primary btn-narrowModal" id="confirmDeleteBillGroup">{{nls.OK}}</button>
						</div>
						<div class="col-sm-6">
							<button class="btn btn-default btn-narrowModal" data-dismiss="modal">{{nls.Cancel}}</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>