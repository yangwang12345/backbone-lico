<div class="modal fade" id="createBillingGroupModal" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="true">
	<div class="modal-dialog modal-overall">
		<div class="modal-content modal-content-overall">
			<div class="modal-header modal-header-overall">
				<h3 class="modal-title modal-title-overall new_user_mudle_partment">{{nls.accountingGroup}}</h3>
			</div>
			<div class="modal-body">
				<div class="row form-group">		
					<div class="col-sm-10 col-sm-offset-1" id="billGroupMsgArea"></div>			
				</div>
				<div class="row form-group inputRow-overall">
					<div class="col-sm-3 label-modal-overall">
						<label for="newBillGroupName" class="control-label">*{{nls.accountingGroup}}: </label>
					</div>
					<div class="billGroupInput">
						<input type="text" id="newBillGroupName" class="form-control" style="width:200px;" autofocus required>
					</div>
				</div>				
				<div class="row form-group inputRow-overall">
					<div class="col-sm-3 label-modal-overall">
						<label for="chargeRate" class="control-label">*{{nls.rate}}{{nls.rateMeaning}}: </label>
					</div>
					<div class="billGroupInput">						
						<span><input type="text" class="form-control inputwithUnitClass" id="chargeRate" style="margin-right:10px;"  required>{{nls.moneyType}}/{{nls.rateUnit}}</span>
					</div>
				</div>
				<div class="row form-group inputRow-overall">
					<div class="col-sm-3 label-modal-overall">
						<label for="billAmount" class="control-label">*{{nls.initialAmount}}: </label>
					</div>
					<div class="billGroupInput">						
						<span><input type="text" class="form-control inputwithUnitClass" id="billAmount" style="margin-right:10px;" required>{{nls.moneyType}}</span>
					</div>
				</div>
				<div class="row inputRow-overall" id="hintArea" style="display:none;">
					<div class="col-sm-6 col-sm-offset-3">
						<span>{{nls.hintforUser2}}</span>
						<span id="hintforHours"></span>
						<span>{{nls.hintforUser3}}</span>
					</div>
				</div>
			</div>
			<div class="modal-footer modal-footer-overall">
				<div class="row">
					<div class="col-sm-6">
						<button class="btn btn-primary btn-narrowModal" id="createBillGroupOKBtn" disabled>{{nls.OK}}</button>
					</div>
					<div class="col-sm-6">
						<button class="btn btn-default btn-narrowModal" data-dismiss="modal">{{nls.Cancel}}</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>