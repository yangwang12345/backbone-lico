<div class="container-fluid userViewArea_userManagemwnt" >
	<div class="admin-users-title">
		<div class="new_group_icon"></div><h3 class="overall-heading">{{nls.group}}</h3>
		<!-- <span style="padding-left:20px">{{nls.groupCount}} : </span><span></span> -->
		
	</div>
	<div class="row">
		<div class="col-md-12" >
			<div class="btn-toolbar"   >
				<div class="btn-group">
					<button class="btn btn-primary" id="addGroupBtn">{{nls.addGroup}}</button>
				</div>
				<div class="btn-group">
					<button class="btn btn-primary" id="deleteGroupBtn" disabled>{{nls.deleteGroup}}</button>
				</div>
				<div class="btn-group">
					<button class="btn btn-primary" id="editGroupBtn" disabled>{{nls.editGroup}}</button>
				</div>
			</div>
			<div class="dataTable_wrapper" >
				<table class="table table-striped table-hover"   id="groupTable"></table>
			</div>
		</div>
	</div>
	<div id="userGroupModalID"></div>
	<div class="modal fade" id="confirmModal-deleteGroup" tabindex="-1" role="dialog"  aria-hidden="true" data-backdrop="static" data-keyboard="true">
		<div class="modal-dialog modal-overall">
			<div class="modal-content modal-content-overall">
				<div class="modal-header modal-header-overall">
					<h3 class="modal-title new_user_mudle_partment">{{nls.confirmDeletion}}<span id="selectedGroupName"></span>?</h3>
				</div>
				<div class="modal-body">
					<div class="row row_uer_group" >
						<div class="col-sm-12" id="deleteGroupMsg"></div>
						<div class="col-sm-12 tips-header">{{nls.tipsHeaderforOperation}}:</div>
						<div class="col-sm-12">
							<ol class="tips-content">
								<li>{{nls.tipsContent1}}</li>
								<li>{{nls.tipsContent2}}</li>
								<li>{{nls.tipsContent3}}</li>
							</ol>
						</div>
					</div>
				</div>
				<div class="modal-footer modal-footer-overall">
					<div class="row">
						<div class="col-sm-6">
							<button class="btn btn-primary btn-narrowModal" id="confirmDeleteGroup">{{nls.OK}}</button>
						</div>
						<div class="col-sm-6">
							<button class="btn btn-default btn-narrowModal" data-dismiss="modal">{{nls.Cancel}}</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>